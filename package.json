{
  "name": "wealth-wise",
  "type": "module",
  "main": "dist/app.js",
  "types": "dist/main.d.ts",
  "scripts": {
    "start": "node dist/app.js",
    "start:dev": "NODE_PATH=./src nodemon --ext js,ts,json,env --exec 'node --experimental-specifier-resolution=node --loader ts-node/esm' src/app.ts",
    "prepare": "husky install",
    "build": "tsc --project tsconfig.build.json",
    "build:clean": "rm -rf tsconfig.build.tsbuildinfo && rm -rf ./dist",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --detectOpenHandles",
    "test:coverage": "yarn test -- --coverage",
    "test:watch": "yarn test -- --watchAll",
    "test:ci": "yarn test -- --colors --coverage --ci",
    "lint": "eslint --ext .ts,.js .",
    "format": "prettier \"./**\" --write --ignore-unknown",
    "format:check": "prettier \"./**\" --ignore-unknown --check"
  },
  "dependencies": {
    "@fastify/cors": "^8.2.0",
    "@fastify/jwt": "^6.5.0",
    "@fastify/passport": "^2.2.0",
    "@fastify/secure-session": "^6.0.0",
    "@prisma/client": "^4.10.1",
    "bcrypt": "^5.1.0",
    "dayjs": "^1.11.7",
    "dotenv": "^16.0.0",
    "fastify": "^4.13.0",
    "fastify-jwt": "^4.2.0",
    "tslib": "^2.3.1",
    "zod": "^3.20.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@faker-js/faker": "^7.6.0",
    "@jest/globals": "^28.0.0",
    "@jest/types": "^28.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/faker": "^6.6.9",
    "@types/jest": "^27.4.1",
    "@types/node": "^18.0.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.12.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "faker": "^6.6.6",
    "husky": "^8.0.1",
    "jest": "^27.5.1",
    "jest-mock-extended": "^3.0.1",
    "lint-staged": "^13.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.1",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "prisma": {
    "seed": ""
  }
}
